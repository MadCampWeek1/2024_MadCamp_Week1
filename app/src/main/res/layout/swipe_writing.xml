<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F1F6F9"
    android:padding="25dp">

    <!-- Profile Image and Author's Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom">

        <ImageView
            android:id="@+id/person_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:contentDescription="@string/profile_icon_description"
            android:src="@drawable/ic_person"/>

        <TextView
            android:id="@+id/author_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Author Name"
            android:gravity="bottom"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Writing Text (centered vertically) -->
    <TextView
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="24sp"
        android:text="Writing Text"/>

    <!-- Heart Button (bottom right corner) -->
    <ImageButton
        android:id="@+id/heart_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_heart_unliked"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="Heart Button"
        android:layout_gravity="end|bottom"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="80dp"/>
</LinearLayout>
